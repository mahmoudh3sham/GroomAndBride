<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".view.activity.ProfileActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_with_back">
    </include>



    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/myProfileTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                android:text="My Profile"/>

            <LinearLayout
                android:layout_below="@+id/myProfileTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="@dimen/_80sdp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/userNameProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/inputs_gray"
                    android:drawableStart="@drawable/user_et"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="Username"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorBlack" />


                <EditText
                    android:id="@+id/emailProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/inputs_gray"
                    android:drawableStart="@drawable/email_et"
                    android:drawablePadding="@dimen/_10sdp"
                    android:focusable="false"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/colorBlack" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <EditText
                        android:id="@+id/passProfile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/inputs_gray"
                        android:drawableStart="@drawable/pass_et"
                        android:drawablePadding="@dimen/_10sdp"
                        android:focusable="false"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="@dimen/_10sdp"
                        android:text="*************" />

                    <TextView
                        android:id="@+id/changePassTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/passProfile"
                        android:layout_alignEnd="@+id/passProfile"
                        android:layout_alignBottom="@+id/passProfile"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="Change"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnApplyChanges"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:focusable="false"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:text="Apply Changes"
        android:textAllCaps="false"
        android:background="@drawable/button_login"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>