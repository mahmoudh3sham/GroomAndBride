<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.HallDetailesActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_with_back_logo">
    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/callDetailesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_165sdp"
                    android:layoutDirection="rtl"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderCircularHandlerEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="1dp"
                    app:sliderIndicatorSelectedColor="@color/colorPrimary"
                    app:sliderIndicatorUnselectedColor="@color/graycolorsad"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="true"/>

                <ImageView
                    android:id="@+id/imgFavOff"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/fav_off"/>

                <ImageView
                    android:id="@+id/imgFavOn"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/fav_on"
                    android:visibility="gone"/>


                <LinearLayout
                    android:id="@+id/linRating"
                    android:layout_below="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ratingLina"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">

                        <!--RATE STARS-->

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:rating="3"
                            android:numStars="5"
                            android:stepSize="1"
                            android:isIndicator="true"/>

                        <!--
                        //problem in imgs sizes
                        <RatingBar
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            style="@style/customRatingBar"
                            android:layout_gravity="center"
                            android:rating="2"
                            android:numStars="5"
                            android:stepSize="1"
                            android:isIndicator="true"/>
                        -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/rateNumItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginStart="3dp"
                                android:textColor="@color/colorBlack"
                                android:text="0"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/colorBlack"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:text="Rates"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/hallPriceTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textStyle="bold"
                            android:background="@drawable/back_rounded_primary"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/hallName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linRating"
                    android:textSize="@dimen/_14sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:text="-"/>

                <TextView
                    android:id="@+id/hallDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hallName"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"
                    android:text="-"/>

                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hallDesc"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/colorGray"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_7sdp"
                        android:src="@drawable/ic_location"/>
                    <TextView
                        android:id="@+id/hallAddress"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_9sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="sadadedadsqsdq"/>

                    <LinearLayout
                        android:id="@+id/locationMapBtn"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:background="@drawable/location"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:textSize="@dimen/_9sdp"
                            android:text="Location"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/hallSpec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin2"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:text="Special Offers"/>

                <TextView
                    android:id="@+id/hallSpecialOffer"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hallSpec"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="-"/>
            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/callDetailesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/call_icon"/>
            <TextView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorWhite"
                android:text="Call"/>
        </LinearLayout>

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>